<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<!-- Content for the Edit Cryptocurrency Operation -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Cryptocurrency Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Cryptocurrency Name" name="Name" value="<%= crypto.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="purchasePriceTextField">Purchase Price</label>
                    <input type="number" class="form-control" id="purchasePriceTextField" placeholder="Enter the Purchase Price" name="PurchasePrice" value="<%= crypto.PurchasePrice %>" required>
                </div>
                <div class="form-group">
                    <label for="quantityTextField">Quantity</label>
                    <input type="number" class="form-control" id="quantityTextField" placeholder="Enter the Quantity" name="Quantity" value="<%= crypto.Quantity %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Cryptocurrency Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea" placeholder="Enter the Cryptocurrency Description" name="Description" required><%= crypto.Description %></textarea>
                </div>
                <div class="form-group">
                    <label for="currentPriceTextField">Current Market Price (Optional)</label>
                    <input type="number" class="form-control" id="currentPriceTextField" placeholder="Enter the Current Market Price" name="CurrentPrice" value="<%= crypto.CurrentPrice %>">
                </div>
                <button class="btn btn-primary" type="submit">Submit
                    <i class="fas fa-edit"></i></button>
                <button class="btn btn-warning" type="reset">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs %>
