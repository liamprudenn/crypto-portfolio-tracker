<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<!-- Crypto Portfolio Tracker -->
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>
            <br>
            <a href="/portfolio/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add Cryptocurrency
            </a>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <th class="text-center col-2">Cryptocurrency Name</th>
                    <th class="text-center col-2">Purchase Price</th>
                    <th class="text-center col-1">Quantity</th>
                    <th class="col-4">Description</th>
                    <th class="text-center col-1">Current Price</th>
                </tr>
                <% for(let count=0; count < cryptoList.length; count++) { %>
                <tr class="d-flex">
                    <td class="text-center col-2"><%= cryptoList[count].Name %></td>
                    <td class="text-center col-2">$<%= cryptoList[count].PurchasePrice %></td>
                    <td class="text-center col-1"><%= cryptoList[count].Quantity %></td>
                    <td class="col-4"><%= cryptoList[count].Description %></td>
                    <td class="text-center col-1">$<%= cryptoList[count].CurrentPrice %></td>
                    <td class="text-center col-1">
                        <a href="/portfolio/edit/<%= cryptoList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Edit
                        </a>
                    </td>
                    <td class="text-center col-1">
                        <a href="/portfolio/delete/<%= cryptoList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>    
                <% } %>
            </table>
        </div>
    </div>
</main>
<%- include ../Partials/footer.ejs %>
