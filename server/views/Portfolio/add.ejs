<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>

<!-- Content for Add Cryptocurrency Page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%= title %></h1>
      <form class="form" action="/portfolio/add" method="POST">
        <!-- Cryptocurrency Name -->
        <div class="form-group">
          <label for="cryptoNameTextField">Cryptocurrency Name</label>
          <input type="text" class="form-control" id="cryptoNameTextField" placeholder="Enter the Cryptocurrency Name" name="Name" required>
        </div>

        <!-- Purchase Price -->
        <div class="form-group">
          <label for="purchasePriceTextField">Purchase Price</label>
          <input type="number" class="form-control" id="purchasePriceTextField" placeholder="Enter the Purchase Price" name="PurchasePrice" step="0.01" required>
        </div>

        <!-- Quantity -->
        <div class="form-group">
          <label for="quantityTextField">Quantity</label>
          <input type="number" class="form-control" id="quantityTextField" placeholder="Enter the Quantity" name="Quantity" required>
        </div>

        <!-- Description -->
        <div class="form-group">
          <label for="descriptionTextArea">Cryptocurrency Description</label>
          <textarea class="form-control" id="descriptionTextArea" placeholder="Enter a Description" name="Description"></textarea>
        </div>

        <!-- Current Price -->
        <div class="form-group">
          <label for="currentPriceTextField">Current Price</label>
          <input type="number" class="form-control" id="currentPriceTextField" placeholder="Enter the Current Price (optional)" name="CurrentPrice" step="0.01">
        </div>

        <!-- Buttons -->
        <button class="btn btn-primary" type="submit">
          Submit <i class="fas fa-check"></i>
        </button>
        <a class="btn btn-warning" href="/portfolio">
          Cancel <i class="fas fa-undo"></i>
        </a>
      </form>
    </div>
  </div>
</div>

<%- include ../Partials/footer.ejs %>